{
  "build": {
    "builder": "nixpacks",
    "config": {
      "scripts": {
        "setup": "curl -fsSL https://ollama.com/install.sh | sh && ollama pull mistral",
        "build": "pip install -r requirements.txt"
      }
    }
  },
  "deploy": {
    "services": {
      "web": {
        "start": "gunicorn main:app -b 0.0.0.0:$PORT -t 120 --workers 1",
        "memory": 1024
      },
      "ollama": {
        "start": "ollama serve",
        "memory": 2048
      }
    }
  }
}
